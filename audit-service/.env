# Database
DATABASE_URL=postgresql://alex:hales@localhost:5432/audit_service

# Redis
REDIS_URL=redis://redis:6379

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672

# External Service URLs
USER_SERVICE_URL=http://user-service:8000
TRANSACTION_SERVICE_URL=http://transaction-service:8000
PAYMENT_SERVICE_URL=http://payment-service:8000

# Service Configuration
SERVICE_NAME=audit-service
SERVICE_PORT=8000
DEBUG=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256

# Audit Configuration
MAX_AUDIT_BATCH_SIZE=1000
AUDIT_RETENTION_DAYS=365
AUDIT_QUEUE_NAME=audit_events
AUDIT_PROCESSOR_INTERVAL=5

# Security Configuration
MASK_SENSITIVE_DATA=true
COMPLIANCE_MODE=strict
LOG_DATA_CHANGES=true
LOG_FAILED_ATTEMPTS=true
LOG_ADMIN_ACTIONS=true

# Alert Configuration
CRITICAL_ACTION_ALERT=true
SUSPICIOUS_ACTIVITY_THRESHOLD=10

# Rate Limiting
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=60
